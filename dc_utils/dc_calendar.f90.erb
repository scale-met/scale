  real(DP), private, parameter :: TIME_HOUR    =  24.D0
  real(DP), private, parameter :: TIME_MIN     =  60.D0
  real(DP), private, parameter :: TIME_SEC     =  60.D0

  character(len=LOG_LMSG), private :: message
