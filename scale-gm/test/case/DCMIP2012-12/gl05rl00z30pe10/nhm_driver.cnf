    divdamp_type      = 'DIRECT',
    lap_order_divdamp = 2,
    alpha_d           = 1.20D16,
/

&EMBUDGETPARAM
    MNT_ON   = .true.,
    MNT_INTV = 3     ,
/

&NMHISD
    output_io_mode   = 'ADVANCED' ,
    histall_fname    = 'history'  ,
