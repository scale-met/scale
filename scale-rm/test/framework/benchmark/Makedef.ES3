################################################################################
#
# ------ For Earth Simulator 3 -----
#
################################################################################

##### Fortran setting
#FFLAGS is set in Mkinclude. FFLAGS_DEBUG is used if DEBUG=T

FC  = sxmpif90
SFC = frtpx
MODDIROPT = -to

FFLAGS_FAST  = -C hopt                    \
               -Ep -f2003 -dW             \
               -Wf"-L fmtlist transform"  \
               -Wf"-pvctl chgpwr fullmsg"

FFLAGS_DYN   = $(FFLAGS)

FFLAGS_DEBUG = -C vsafe                      \
               -Ep -f2003 -dW                \
               -Wf"-L fmtlist transform"     \
               -Wf"-pvctl fullmsg"           \
               -Wf"-init heap=nan stack=nan"



##### C setting
#CFLAGS is set in Mkinclude. CFLAGS_DEBUG is used if DEBUG=T

CC = sxmpic++

CFLAGS_FAST  = -C vsafe
CFLAGS_DEBUG = $(CFLAGS_FAST)



##### Special setting

# OpenMP
# disable
OMP =
# enable
#OMP = -P openmp

### Performance monitor
# disable
#PERF_MONIT = -Nftrace
# enable
PERF_MONIT = -ftrace

FFLAGS_SYSDEPEND = $(OMP) $(PERF_MONIT) -D__ES2
CFLAGS_SYSDEPEND = $(OMP) $(PERF_MONIT) -D__ES2



##### Linker setting

LD      = $(FC)
LDFLAGS = $(FFLAGS)



################################################################################

###### NetCDF library
# Default settings
NETCDF_INCLUDE ?= -I/SX/usr/include
NETCDF_LIBS    ?= -L/SX/usr/lib0 -lnetcdf
# Or, please set environment variable
# example:
# export NETCDF_INCLUDE="-I/SX/usr/include"
# export NETCDF_LIBS="-L/SX/usr/lib0 -lnetcdf"

###### Lapack library
# Default settings
LAPACK_LIBS    ?=
# Or, please set environment variable
# example:
# export LAPACK_LIBS="-L/SX/opt/mathkeisan/inst/lib0 -llapack -lblas"

##### for frontend
INSTALL = install
AR      = sxar
ARFLAGS = r
RANLIB  = touch
JOBSUB  = qsub
